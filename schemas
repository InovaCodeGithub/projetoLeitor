const Leitor = mongoose.model('Leitor',{
    uuid: Number,
    tag:String
})

const Registro = mongoose.model('Registro',{
    id_pessoa: Number,
    nm_pessoa:String,
    id_leitor:String,
    uuid_leitor:String,
    nm_leitor:String,
    dt_registro:Date,
    hr_registro:Date,
    corrente:String
})

const Login = mongoose.model(`Login`,{
    nome:String,
    email:String,
    usuario:String,
    senha:String,
    dt_registro:Date,
    dt_acesso:Date,
    hr_acesso:Date
})


    nome
    email
